  <body>
    <main>
        <div class="create_animal">
          <form action="/animal" method="post">
            <fieldset>
              <legend>Create a New Animal</legend>
              <label>
                SPECIES:<input class="species"
                  type="text"
                  name="species"
                  placeholder="enter species name"
                />
              </label>
              <label>
                LOCATION:<input class="location"
                  type="text"
                  name="color"
                  placeholder="enter animal location"
                />
              </label>
              <label>
                LIFE EXPECTANCY:<input class="le"
                  type="number"
                  name="life expectancy"
                  placeholder="enter life expectancy"
                />
              </label>
              <label> EXTINCT:<input class="extinct" type="checkbox" name="extinct" /> </label>
            </fieldset>
            <input type="submit" value="Create New Animal" />
          </form>
        </div>
      </main>
    </body>
